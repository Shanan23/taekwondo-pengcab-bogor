<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Admin Taekwondo Bogor</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/admin-header') %>

  <div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
      <div>
        <a href="/admin/members/create" class="btn btn-sm btn-primary me-2">
          <i class="fas fa-user-plus"></i> Add Member
        </a>
        <a href="/admin/events/create" class="btn btn-sm btn-success">
          <i class="fas fa-calendar-plus"></i> Create Event
        </a>
      </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row">
      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col me-2">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                  Total Members
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">215</div>
              </div>
              <div class="col-auto">
                <i class="fas fa-users fa-2x text-gray-300"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col me-2">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                  Active Units
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
              </div>
              <div class="col-auto">
                <i class="fas fa-building fa-2x text-gray-300"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col me-2">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                  Upcoming Events
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
              </div>
              <div class="col-auto">
                <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col me-2">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                  Black Belts
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">45</div>
              </div>
              <div class="col-auto">
                <i class="fas fa-award fa-2x text-gray-300"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Row -->
    <div class="row">
      <!-- Upcoming Events -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Upcoming Events</h6>
            <a href="/admin/events" class="btn btn-sm btn-primary">View All</a>
          </div>
          <div class="card-body">
            <div class="list-group">
              <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Kejurda Bogor 2023</h5>
                  <small class="text-muted">14 Aug 2023</small>
                </div>
                <p class="mb-1">Kejuaraan Daerah Taekwondo Bogor 2023</p>
                <small class="text-muted">GOR Pajajaran, Kota Bogor</small>
              </a>
              <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Ujian Kenaikan Tingkat</h5>
                  <small class="text-muted">21 Aug 2023</small>
                </div>
                <p class="mb-1">UKT Periode II 2023</p>
                <small class="text-muted">Aula SMAN 1 Bogor</small>
              </a>
              <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Seminar Pelatih Nasional</h5>
                  <small class="text-muted">28 Aug 2023</small>
                </div>
                <p class="mb-1">Seminar Pelatih Taekwondo Tingkat Nasional</p>
                <small class="text-muted">Hotel Salak, Bogor</small>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Members -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Recent Members</h6>
            <a href="/admin/members" class="btn btn-sm btn-primary">View All</a>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-borderless">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Belt</th>
                    <th>Unit</th>
                    <th>Join Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Ahmad Rizki</td>
                    <td><span class="badge bg-dark">Black</span></td>
                    <td>Kota Bogor</td>
                    <td>10 Aug 2023</td>
                  </tr>
                  <tr>
                    <td>Siti Nurhaliza</td>
                    <td><span class="badge bg-danger">Red</span></td>
                    <td>Dramaga</td>
                    <td>9 Aug 2023</td>
                  </tr>
                  <tr>
                    <td>Budi Santoso</td>
                    <td><span class="badge bg-primary">Blue</span></td>
                    <td>Cibinong</td>
                    <td>8 Aug 2023</td>
                  </tr>
                  <tr>
                    <td>Dewi Safitri</td>
                    <td><span class="badge bg-warning">Yellow</span></td>
                    <td>Parung</td>
                    <td>7 Aug 2023</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Row -->
    <div class="row">
      <!-- Belt Distribution -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Belt Distribution</h6>
          </div>
          <div class="card-body">
            <h4 class="small font-weight-bold">White Belt <span class="float-end">20%</span></h4>
            <div class="progress mb-4">
              <div class="progress-bar bg-light border" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h4 class="small font-weight-bold">Yellow Belt <span class="float-end">25%</span></h4>
            <div class="progress mb-4">
              <div class="progress-bar bg-warning" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h4 class="small font-weight-bold">Green Belt <span class="float-end">15%</span></h4>
            <div class="progress mb-4">
              <div class="progress-bar bg-success" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h4 class="small font-weight-bold">Blue Belt <span class="float-end">15%</span></h4>
            <div class="progress mb-4">
              <div class="progress-bar bg-primary" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h4 class="small font-weight-bold">Red Belt <span class="float-end">15%</span></h4>
            <div class="progress mb-4">
              <div class="progress-bar bg-danger" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h4 class="small font-weight-bold">Black Belt <span class="float-end">10%</span></h4>
            <div class="progress">
              <div class="progress-bar bg-dark" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-6 mb-3">
                <a href="/admin/members/create" class="quick-action-card card bg-light text-center p-4 h-100 text-decoration-none">
                  <i class="fas fa-user-plus fa-3x mb-2 text-primary"></i>
                  <h5>Add Member</h5>
                </a>
              </div>
              <div class="col-6 mb-3">
                <a href="/admin/units/create" class="quick-action-card card bg-light text-center p-4 h-100 text-decoration-none">
                  <i class="fas fa-building fa-3x mb-2 text-success"></i>
                  <h5>Add Unit</h5>
                </a>
              </div>
              <div class="col-6 mb-3">
                <a href="/admin/events/create" class="quick-action-card card bg-light text-center p-4 h-100 text-decoration-none">
                  <i class="fas fa-calendar-plus fa-3x mb-2 text-info"></i>
                  <h5>Create Event</h5>
                </a>
              </div>
              <div class="col-6 mb-3">
                <a href="/admin/organization" class="quick-action-card card bg-light text-center p-4 h-100 text-decoration-none">
                  <i class="fas fa-sitemap fa-3x mb-2 text-warning"></i>
                  <h5>Organization</h5>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <%- include('../partials/admin-footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Logout functionality
    document.getElementById('logoutBtn').addEventListener('click', function(e) {
      e.preventDefault();
      
      fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        window.location.href = '/admin/login';
      })
      .catch(error => {
        console.error('Error:', error);
      });
    });
  </script>
</body>
</html> 