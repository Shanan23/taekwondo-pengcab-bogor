<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Admin Taekwondo Pengcab Bogor</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
  
  <!-- Custom Admin Styles -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-white">
      <div class="p-3">
        <a href="/admin" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <img src="/img/logo.png" alt="Taekwondo Pengcab Bogor" class="img-fluid" style="max-width: 30px; max-height: 30px;">
          <span class="ms-2 fs-5">Admin Panel</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/admin" class="nav-link text-white <%= active === 'dashboard' ? 'active' : '' %>">
              <i class="fas fa-tachometer-alt me-2"></i>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/about" class="nav-link text-white <%= active === 'about' ? 'active' : '' %>">
              <i class="fas fa-info-circle me-2"></i>
              About Us
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/vision-mission" class="nav-link text-white <%= active === 'vision-mission' ? 'active' : '' %>">
              <i class="fas fa-bullseye me-2"></i>
              Vision & Mission
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/organization" class="nav-link text-white <%= active === 'organization' ? 'active' : '' %>">
              <i class="fas fa-sitemap me-2"></i>
              Organization
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/events" class="nav-link text-white <%= active === 'events' ? 'active' : '' %>">
              <i class="fas fa-calendar-alt me-2"></i>
              Events
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/units" class="nav-link text-white <%= active === 'units' ? 'active' : '' %>">
              <i class="fas fa-building me-2"></i>
              Units
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/members" class="nav-link text-white <%= active === 'members' ? 'active' : '' %>">
              <i class="fas fa-users me-2"></i>
              Members
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/settings" class="nav-link text-white <%= active === 'settings' ? 'active' : '' %>">
              <i class="fas fa-cogs me-2"></i>
              Settings
            </a>
          </li>
        </ul>
        <hr>
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/img/default-avatar.png" alt="Admin" width="32" height="32" class="rounded-circle me-2">
            <strong>Admin</strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href="/admin/settings">Settings</a></li>
            <li><a class="dropdown-item" href="/admin/profile">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/admin/logout">Sign out</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div id="content">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 shadow">
        <div class="container-fluid">
          <!-- Sidebar Toggle (Mobile) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>
          
          <!-- Page title -->
          <h1 class="h3 mb-0 text-gray-800 d-none d-sm-inline-block"><%= title %></h1>
          
          <!-- Right side of navbar -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link" href="/" target="_blank">
                <i class="fas fa-globe fa-fw"></i>
                <span class="d-none d-md-inline-block ml-1">View Website</span>
              </a>
            </li>
            <li class="nav-item dropdown no-arrow ms-3">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="d-none d-md-inline-block mr-2 text-gray-600">Admin</span>
                <img class="img-profile rounded-circle" src="/img/default-avatar.png" style="height: 40px; width: 40px;">
              </a>
              <!-- Dropdown - User Information -->
              <div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="/admin/profile">
                  <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                  Profile
                </a>
                <a class="dropdown-item" href="/admin/settings">
                  <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                  Settings
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/admin/logout">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Logout
                </a>
              </div>
            </li>
          </ul>
        </div>
      </nav>
      
      <!-- Begin Page Content -->
      <div class="content-wrapper">
        <!-- Main content goes here -->
      