<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="text-center mb-4">Unit & Taekwondoin</h1>
      <p class="lead text-center">Database lengkap unit Taekwondo dan Taekwondoin di bawah naungan Pengcab Taekwondo Bogor</p>
    </div>
  </div>

  <!-- Filter -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Filter Pencarian</h5>
          <div class="row g-3">
            <div class="col-md-4">
              <label for="filter-unit" class="form-label">Unit</label>
              <select class="form-select" id="filter-unit">
                <option value="">Semua Unit</option>
                <option value="1">Unit Kota Bogor</option>
                <option value="2">Unit Kabupaten Bogor</option>
              </select>
            </div>
            <div class="col-md-4">
              <label for="filter-sabuk" class="form-label">Tingkat Sabuk</label>
              <select class="form-select" id="filter-sabuk">
                <option value="">Semua Tingkatan</option>
                <option value="putih">Putih</option>
                <option value="kuning">Kuning</option>
                <option value="hijau">Hijau</option>
                <option value="biru">Biru</option>
                <option value="merah">Merah</option>
                <option value="hitam">Hitam</option>
              </select>
            </div>
            <div class="col-md-4">
              <label for="search-name" class="form-label">Nama</label>
              <input type="text" class="form-control" id="search-name" placeholder="Cari berdasarkan nama">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs for Units and Members -->
  <ul class="nav nav-tabs mb-4" id="databaseTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="units-tab" data-bs-toggle="tab" data-bs-target="#units" type="button" role="tab" aria-controls="units" aria-selected="true">
        Unit Taekwondo
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="members-tab" data-bs-toggle="tab" data-bs-target="#members" type="button" role="tab" aria-controls="members" aria-selected="false">
        Taekwondoin
      </button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content" id="databaseTabContent">
    <!-- Units Tab -->
    <div class="tab-pane fade show active" id="units" role="tabpanel" aria-labelledby="units-tab">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Sample Unit Cards -->
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="https://via.placeholder.com/300x200?text=Unit+Taekwondo" class="card-img-top" alt="Unit Taekwondo">
            <div class="card-body">
              <h5 class="card-title">Unit Taekwondo Kota Bogor</h5>
              <p class="card-text">
                <i class="fas fa-map-marker-alt me-2"></i> Jl. Pajajaran No. 123, Kota Bogor<br>
                <i class="fas fa-users me-2"></i> 120 Anggota<br>
                <i class="fas fa-user me-2"></i> Pelatih: Sabeum Budi
              </p>
            </div>
            <div class="card-footer">
              <a href="#" class="btn btn-sm btn-primary">Lihat Detail</a>
            </div>
          </div>
        </div>
        
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="https://via.placeholder.com/300x200?text=Unit+Taekwondo" class="card-img-top" alt="Unit Taekwondo">
            <div class="card-body">
              <h5 class="card-title">Unit Taekwondo Dramaga</h5>
              <p class="card-text">
                <i class="fas fa-map-marker-alt me-2"></i> Jl. Dramaga Raya No. 45, Kabupaten Bogor<br>
                <i class="fas fa-users me-2"></i> 85 Anggota<br>
                <i class="fas fa-user me-2"></i> Pelatih: Sabeum Andi
              </p>
            </div>
            <div class="card-footer">
              <a href="#" class="btn btn-sm btn-primary">Lihat Detail</a>
            </div>
          </div>
        </div>
        
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="https://via.placeholder.com/300x200?text=Unit+Taekwondo" class="card-img-top" alt="Unit Taekwondo">
            <div class="card-body">
              <h5 class="card-title">Unit Taekwondo Cibinong</h5>
              <p class="card-text">
                <i class="fas fa-map-marker-alt me-2"></i> Jl. Raya Cibinong No. 78, Cibinong<br>
                <i class="fas fa-users me-2"></i> 95 Anggota<br>
                <i class="fas fa-user me-2"></i> Pelatih: Sabeum Citra
              </p>
            </div>
            <div class="card-footer">
              <a href="#" class="btn btn-sm btn-primary">Lihat Detail</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Members Tab -->
    <div class="tab-pane fade" id="members" role="tabpanel" aria-labelledby="members-tab">
      <div class="table-responsive">
